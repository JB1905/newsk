{
  "name": "newsk",
  "version": "1.0.0",
  "description": "News browser with search by category, language, country & more",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "private": true,
  "scripts": {
    "//TODO": "run dev and watch:tailwind in one command",
    "dev": "sapper dev",
    "build": "npm run build:tailwind && sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "validate": "svelte-check --ignore src/node_modules/@sapper",
    "deploy": "netlify deploy --dir __sapper__/export --prod",
    "prettier": "prettier --write '{src,static}/**/*.{svelte,ts,js,css,json,html}'",
    "commit": "git-cz",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "polka": "^0.5.2",
    "query-string": "^6.13.8",
    "sapper-environment": "^1.0.1",
    "sirv": "^1.0.10",
    "svelte-icons": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.12.5",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^8.1.0",
    "@rollup/plugin-url": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/compression": "^1.7.0",
    "@types/node": "^14.14.31",
    "@types/polka": "^0.5.2",
    "cypress": "^6.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.0.3",
    "rollup": "^2.36.1",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.28.10",
    "svelte": "^3.31.2",
    "svelte-check": "^1.1.26",
    "svelte-preprocess": "^4.6.1",
    "tailwindcss": "^2.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,static}/**/*.{svelte,ts,js,css,json,html}": [
      "npm run prettier"
    ]
  }
}
